.header {
}

.button {
    font-size: 20px;
    transition-duration: 0.35s;
    background-color: rgb(0, 0, 0);
    -unity-background-image-tint-color: rgb(0, 0, 0);
}

.button:hover {
    scale: 1.1 1.1;
    -unity-background-image-tint-color: rgb(255, 0, 0);
    transition-duration: 0s;
    transition-delay: 0s;
    background-color: rgba(255, 255, 255, 0);
}
